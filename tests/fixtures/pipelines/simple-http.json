{
  "id": "simple-http-proxy",
  "version": 1,
  "agentId": "web-agent",
  "protocol": "http",
  "defaults": {
    "timeoutMs": 5000,
    "retries": {
      "maxAttempts": 3,
      "backoff": "exponential",
      "baseMs": 100,
      "maxMs": 1000
    }
  },
  "nodes": [
    {
      "id": "auth",
      "type": "auth.jwt.validate",
      "config": {
        "issuer": "https://auth.example.com",
        "audience": "https://api.example.com"
      },
      "posture": "fail-closed",
      "on": {
        "success": "egress",
        "failure": "deny"
      }
    },
    {
      "id": "egress",
      "type": "egress.http",
      "config": {
        "upstream_url": "https://api.example.com",
        "timeout_ms": 3000,
        "strip_headers": [
          "Authorization",
          "Cookie",
          "Proxy-Authorization",
          "X-Forwarded-Access-Token",
          "X-Forwarded-Authorization"
        ]
      },
      "governance": {
        "timeoutMs": 3000,
        "circuitBreaker": {
          "window": "10s",
          "failureRateThreshold": 50
        }
      },
      "on": {
        "success": "allow",
        "failure": "deny",
        "timeout": "deny"
      }
    },
    {
      "id": "allow",
      "type": "terminal.allow"
    },
    {
      "id": "deny",
      "type": "terminal.deny"
    }
  ]
}
