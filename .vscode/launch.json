  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Polis with Debugging",
      "type": "go",
      "request": "launch",
      "mode": "exec",
      "program": "${workspaceFolder}/build/polis.exe",
      "args": [
        "--config",
        "config.yaml",
        "--log-level",
        "debug",
        "--pretty"
      ],
      "console": "integratedTerminal"
    }
  ]
}
